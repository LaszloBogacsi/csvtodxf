<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.shape.*?>
<?import javafx.scene.effect.*?>
<?import javafx.geometry.*?>
<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox fx:id="rootVBox" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.csvtodxf.ui.Controller">
   <children>
      <MenuBar>
        <menus>
          <Menu text="_File">
            <items>
                  <MenuItem fx:id="openMenu" text="_Open Input..." />
                  <MenuItem fx:id="saveAsMenu" mnemonicParsing="false" text="Save as..." />
              <MenuItem fx:id="closeMenu" mnemonicParsing="false" text="Close" />
            </items>
          </Menu>
          <Menu text="_Help">
            <items>
              <MenuItem fx:id="aboutMenu" mnemonicParsing="false" text="About" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
      <HBox spacing="8.0">
         <children>
            <Label text="Input, CSV" />
            <TextField fx:id="inputTextField" editable="false" prefHeight="27.0" prefWidth="192.0" HBox.hgrow="ALWAYS" />
            <Button fx:id="inputBrowseButton" mnemonicParsing="false" text="Browse" />
         </children>
         <padding>
            <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
         </padding>
      </HBox>
      <HBox spacing="8.0">
         <children>
            <Label text="Output, DXF" />
            <TextField fx:id="outputTextField" editable="false" HBox.hgrow="ALWAYS" />
            <Button fx:id="outputBrowseButton" mnemonicParsing="false" text="Browse" />
         </children>
         <padding>
            <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
         </padding>
      </HBox>
      <TableView fx:id="previewTable" prefHeight="145.0" prefWidth="600.0">
        <columns>
          <TableColumn fx:id="pointIdCol" maxWidth="1.7976931348623157E308" prefWidth="100.0" text="Point ID" />
          <TableColumn fx:id="eastingCol" maxWidth="1.7976931348623157E308" prefWidth="100.0" text="Easting" />
            <TableColumn fx:id="northingCol" maxWidth="1.7976931348623157E308" prefWidth="100.0" text="Northing" />
            <TableColumn fx:id="heightCol" maxWidth="1.7976931348623157E308" prefWidth="100.0" text="Height" />
            <TableColumn fx:id="codeCol" maxWidth="1.7976931348623157E308" prefWidth="100.0" text="Code" />
        </columns>
         <VBox.margin>
            <Insets bottom="8.0" top="8.0" />
         </VBox.margin>
      </TableView>
      <HBox>
         <children>
            <SplitPane dividerPositions="0.41708542713567837">
              <items>
                <AnchorPane SplitPane.resizableWithParent="false">
                     <children>
                        <VBox>
                           <children>
                              <HBox spacing="8.0">
                                 <children>
                                    <Label text="Separator" />
                                    <ChoiceBox fx:id="choiceBoxSep" />
                                 </children>
                                 <padding>
                                    <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
                                 </padding>
                              </HBox>
                              <HBox>
                                 <children>
                                    <Label prefHeight="17.0" prefWidth="101.0" text="Text Height" />
                                    <TextField fx:id="textHeightField" alignment="CENTER_RIGHT" prefHeight="27.0" prefWidth="116.0" text="1.0" />
                                 </children>
                                 <padding>
                                    <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
                                 </padding>
                              </HBox>
                           </children>
                        </VBox>
                     </children>
                  </AnchorPane>
                <AnchorPane SplitPane.resizableWithParent="false">
                     <children>
                        <RadioButton mnemonicParsing="false" selected="true" text="2D">
                           <padding>
                              <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
                           </padding>
                           <toggleGroup>
                              <ToggleGroup fx:id="dimensionGroup" />
                           </toggleGroup>
                        </RadioButton>
                        <RadioButton fx:id="is3DButton" layoutY="34.0" mnemonicParsing="false" text="3D" toggleGroup="$dimensionGroup">
                           <padding>
                              <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
                           </padding>
                        </RadioButton>
                     </children>
                     <padding>
                        <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
                     </padding>
                  </AnchorPane>
              </items>
            </SplitPane>
         </children>
      </HBox>
      <VBox prefHeight="115.0" prefWidth="600.0" spacing="8.0">
         <children>
            <CheckBox fx:id="pointNumberCheckBox" mnemonicParsing="false" selected="true" text="Point Number" />
            <CheckBox fx:id="heightCheckBox" mnemonicParsing="false" selected="true" text="Height" />
            <CheckBox fx:id="coordinatedCheckBox" mnemonicParsing="false" text="Coordinates" />
            <CheckBox fx:id="codeCheckBox" mnemonicParsing="false" text="Code" />
         </children>
         <padding>
            <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
         </padding>
      </VBox>
      <HBox>
         <children>
            <Pane HBox.hgrow="ALWAYS" />
            <Button fx:id="convertButton" mnemonicParsing="false" text="Convert">
               <padding>
                  <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
               </padding>
               <HBox.margin>
                  <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
               </HBox.margin>
            </Button>
         </children>
         <VBox.margin>
            <Insets top="10.0" />
         </VBox.margin>
      </HBox>
   </children>
</VBox>
